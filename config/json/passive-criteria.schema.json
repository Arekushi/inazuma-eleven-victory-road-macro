{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "PassiveCriteria",
    "type": "object",
    "required": [
        "spirit",
        "slots"
    ],
    "additionalProperties": true,
    "properties": {
        "spirit": {
            "$ref": "#/$defs/desiredSpirit"
        },
        "slots": {
            "type": "object",
            "description": "Map of slot number to desired passives",
            "additionalProperties": {
                "type": "array",
                "minItems": 1,
                "items": {
                    "$ref": "#/$defs/desiredPassive"
                }
            }
        }
    },
    "$defs": {
        "desiredPassive": {
            "type": "object",
            "required": [
                "id",
                "quality"
            ],
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "number"
                },
                "quality": {
                    "$ref": "#/$defs/passiveQuality"
                }
            }
        },
        "desiredSpirit": {
            "type": "object",
            "required": [
                "quantity",
                "type",
                "rarity",
                "game",
                "down",
                "right"
            ],
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "quantity": {
                    "type": "integer",
                    "minimum": 1
                },
                "type": {
                    "$ref": "#/$defs/playerType"
                },
                "rarity": {
                    "$ref": "#/$defs/playerRarity"
                },
                "game": {
                    "$ref": "#/$defs/ieGame"
                },
                "down": {
                    "type": "integer",
                    "minimum": 0
                },
                "right": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "playerType": {
            "type": "string",
            "enum": [
                "player",
                "manager",
                "coordinator"
            ]
        },
        "playerRarity": {
            "type": "string",
            "enum": [
                "legendary",
                "top",
                "advanced",
                "growing",
                "common"
            ]
        },
        "passiveQuality": {
            "type": "string",
            "enum": [
                "high",
                "any"
            ]
        },
        "ieGame": {
            "type": "string",
            "enum": [
                "IE1",
                "IE2",
                "IE3",
                "GO",
                "GO2",
                "GO_GALAXY",
                "ARES",
                "ORION",
                "VICTORY_ROAD"
            ]
        }
    }
}
